    <link href="~/Files/StudentLayout.css" rel="stylesheet" />
</head>
@RenderBody()
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll-trigger" href="">codixU</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            @Html.ActionLink(" ", "StudentProfile", "Student", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav text-uppercase ml-auto" role="navigation">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Student/StudentCourses">KURSLAR</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Student/StudentEducator">EĞİTMENLER</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="/Student/StudentProfile">PROFİL</a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("ÇIKIŞ", "Logout", "User")">
                    </li>
                }
                else
                {
                    @Html.Partial("~/Views/MenuPartialView.cshtml")
                }

            </ul>
        </div>

    </nav>


    @Html.Partial("~/Views/FooterPartialView.cshtml")


    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/jquery.easing.min.js"></script>
    <script src="~/Scripts/jqBootstrapValidation.js"></script>
    <script src="~/Scripts/contact_me.js"></script>
    <script src="~/Scripts/agency.min.js"></script>
</body>
</html>
