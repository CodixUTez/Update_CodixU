

@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
}

@model codixU.Models.DataModels.ListViewModel

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box
        }

        body {
            font-family: "Lato", sans-serif;
        }

        /* Style the tab */
        .tab {
            float: right;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
            width: 30%;
            height: 300px;
        }

            /* Style the buttons inside the tab */
            .tab button {
                display: block;
                background-color: inherit;
                color: black;
                padding: 22px 16px;
                width: 100%;
                border: none;
                outline: none;
                text-align: left;
                cursor: pointer;
                transition: 0.3s;
                font-size: 17px;
            }

                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #ddd;
                }

                /* Create an active/current "tab button" class */
                .tab button.active {
                    background-color: #ccc;
                }

        /* Style the tab content */
        .tab-content {
            float: left;
            padding: 0px 12px;
            border: 1px solid #ccc;
            width: 70%;
            border-left: none;
            height: %100;
            display: none;
        }

        .active {
            display: block;
        }
    </style>
</head>
<body>
    <h3>
        @foreach (var item in Model.RetrunListOfInteractiveInfo)
        {

            @Html.DisplayFor(modelItem => item.Title)

        }
    </h3>
    <p>
        @foreach (var item in Model.RetrunListOfInteractiveInfo)
        {

            @Html.DisplayFor(modelItem => item.Description)

        }
    </p>

    <div class="tab">
        @foreach (var item in Model.RetrunListOfInteractiveEducations)
        {

            <button class="tablinks" onclick="openCity( '@Html.DisplayFor(modelItem => item.EducationTitle)')" id="@Html.DisplayFor(modelItem => item.EducationTitle)">
                @Html.DisplayFor(modelItem => item.EducationTitle)
            </button>


        }

    </div>
    @foreach (var item in Model.RetrunListOfInteractiveEducations)
    {
        <div id="c_@Html.DisplayFor(modelItem => item.EducationTitle)" class="tab-content">
            <table class="table table-bordered">
                @Html.DisplayFor(modelItem => item.EducationContent)
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-lg">Large modal</button>
            </table>
        </div>
    }


    <script>
        function openCity(cityName) {
            console.log(cityName);
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tab-content");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].classList.remove("active");
            }
            var contentdiv = document.getElementById('c_' + cityName);

            contentdiv.style.display = "block";
        }

    </script>

    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="container" id="quiz">

                        <h1 class="titlee"><span class="glyphicon glyphicon-list-alt"></span>A dynamic quiz</h1>
                        <p class="lead">The first project from <em><a href="http://javascriptissexy.com/how-to-learn-javascript-properly/">How to Learn Javascript Properly</a></em></p>

                        <div class="contentt">

                            <div id="question">

                                <h4 id="question-text"></h4>

                                <ul id="choices"></ul>

                            </div>

                        </div>

                    </div> <!-- close container -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</body>